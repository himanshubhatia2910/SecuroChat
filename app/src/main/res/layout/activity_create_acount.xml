<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#047BD5"
    tools:context=".CreateAcountActivity">
    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:layout_margin="10dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/msg_reg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:text="Sign-up"
            android:textColor="@color/white"
            android:textSize="22sp" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/flash_screen_icon"
            android:layout_gravity="center"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/username"
            android:layout_marginTop="20dp"
            android:textColorHint="#434242"
            android:drawableLeft="@drawable/ic_baseline_account_box_24"
            android:drawableStart="@drawable/ic_baseline_account_box_24"
            android:background="@drawable/logincomp"
            android:paddingLeft="6dp"
            android:textColor="@color/black"
            android:hint="Username"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:paddingLeft="6dp"
            android:background="@drawable/logincomp"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:layout_marginTop="20dp"
            android:textColorHint="#434242"
            android:hint="Email"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textColorHint="#434242"
            android:background="@drawable/logincomp"
            android:paddingLeft="6dp"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:hint="Password"/>
            <ImageView
                android:id="@+id/show_pass_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="26dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:alpha=".5"
                android:onClick="ShowHidePass"
                android:padding="5dp"
                android:src="@drawable/eyehide"
                tools:ignore="OnClick,UsingOnClickInXml" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

            <Button
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/logincomp"
                android:drawablePadding="40dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Get Started"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:layout_margin="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_weight="1"
                android:id="@+id/btn_login"
                android:drawablePadding="40dp"
                android:textAllCaps="false"
                android:layout_gravity="left"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:background="@drawable/logincomp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"/>

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>